<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/prayer_book_primary</item>
        <item name="colorPrimaryDark">@color/prayer_book_primary_dark</item>
        <item name="colorAccent">@color/prayer_book_accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <!--<item name="android:textColorHint">@color/text_hint</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--This changes the overflow button color (and probably other stuff too)-->
        <!--<item name="android:textColorSecondary">@android:color/white</item>-->
    </style>

</resources>
